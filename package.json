{
  "name": "react-tailwindcss-typescript",
  "version": "1.0.3",
  "private": true,
  "license": "MIT",
  "description": "Create React App (CRA) with TailwindCSS and TypeScript",
  "scripts": {
    "watch:css": "postcss src/styles/tailwind.src.css -o src/styles/tailwind.css -w",
    "build:css": "postcss src/styles/tailwind.src.css -o src/styles/tailwind.css",
    "start": "npm run watch:css & react-scripts start",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "resolutions": {
    "lodash.template": ">=4.5.0",
    "lodash": ">=4.17.13"
  },
  "dependencies": {
    "@types/jest": "25.1.2",
    "@types/node": "13.7.1",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.1",
    "typescript": "3.7.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.0.6",
    "autoprefixer": "^9.7.4",
    "postcss-cli": "^7.1.0",
    "tailwindcss": "^1.2.0"
  }
}
